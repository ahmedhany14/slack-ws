{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/auth.common": [
        "libs/auth.common/src",
        "libs/auth.common/src"
      ],
      "@app/auth.common/*": [
        "libs/auth.common/src/*",
        "libs/auth.common/src/*"
      ],
      "@app/config/*": [
        "libs/config/src/*"
      ],
      "@app/constants": [
        "libs/constants/src",
        "libs/constants/src"
      ],
      "@app/constants/*": [
        "libs/constants/src/*",
        "libs/constants/src/*"
      ],
      "@app/database": [
        "libs/database/src"
      ],
      "@app/database/*": [
        "libs/database/src/*"
      ],
      "@app/logger": [
        "libs/logger/src"
      ],
      "@app/logger/*": [
        "libs/logger/src/*"
      ]
    }
  }
}